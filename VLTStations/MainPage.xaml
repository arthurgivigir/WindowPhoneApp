<Page
    x:Class="VLTStations.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VLTStations"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <ResourceDictionary Source="/Style/AppStyle.xaml" />
    </Page.Resources>
    
    <Grid Margin="15">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Estações VLT"
                   Style="{StaticResource TitlePage}"/>

        <Button Grid.Row="1" 
                Content="Buscar Estações"
                HorizontalAlignment="Center"
                Click="BtnRecuperaEstacoes"/>
        
        <ComboBox Grid.Row="2"
                  x:Name="CbStations"/>

        <Button Grid.Row="3" 
                Content="Ver Detalhes"
                HorizontalAlignment="Center"
                Click="BtnVerDetalhes"/>
    </Grid>
</Page>
